<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">



    <item>

        <shape>

            <stroke
                android:width="5dp"
                android:color="#77403f3f" />
            <corners android:radius="15dp" />

            <padding
                android:bottom="-1dp"
                android:left="-2dp"
                android:right="-1dp"
                android:top="-2dp" />


        </shape>
    </item>

    <item>


        <shape>

            <solid android:color="#fff" />
            <corners android:radius="15dp" />
        </shape>
    </item>


</layer-list>